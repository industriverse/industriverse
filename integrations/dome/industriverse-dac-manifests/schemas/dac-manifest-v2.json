{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DAC Manifest Schema v2 (Shadow Twins Enhanced )",
  "type": "object",
  "required": ["id", "name", "semanticVersion", "entrypoint"],
  "properties": {
    "id": {"type": "string", "pattern": "^[a-z0-9-]+/[a-z0-9-]+$"},
    "name": {"type": "string"},
    "semanticVersion": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$"},
    "entrypoint": {
      "type": "object",
      "required": ["image", "cmd"],
      "properties": {
        "image": {"type": "string"},
        "cmd": {"type": "array", "items": {"type": "string"}}
      }
    },
    "shadow_twin_config": {
      "type": "object",
      "properties": {
        "failure_prediction_enabled": {"type": "boolean", "default": true},
        "prediction_horizon_seconds": {"type": "integer", "default": 1800},
        "intervention_threshold": {"type": "number", "minimum": 0, "maximum": 1, "default": 0.7},
        "obmi_integration": {"type": "boolean", "default": true},
        "m2n2_evolution": {"type": "boolean", "default": false}
      }
    }
  }
}
