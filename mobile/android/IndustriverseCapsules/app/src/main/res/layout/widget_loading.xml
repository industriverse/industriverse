<?xml version="1.0" encoding="utf-8"?>
<!--
    Widget Loading Layout
    Week 13 Day 5-6: Loading state for widgets

    This layout is shown briefly while the widget is initializing.
    Glance will replace it with the actual widget content.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/notification_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ProgressBar
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:indeterminateTint="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/loading_capsules"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</LinearLayout>
